{
  "name": "diplom.guru",
  "version": "1.0.0",
  "description": "Diploma project for QAGuru Playwright. UI tests for RealWorld QA Guru.",
  "main": "index.js",
  "scripts": {
    "allureGenerate": "allure generate -o allure-report",
    "allureClean": "rm -rf allure-results allure-report",
    "allureOpen": "allure open",
    "debug": "npx playwright test --ui",
    "test": "npx playwright test",
    "ui":"npx playwright test --project=chromium-ui",
    "api": "npx playwright test --project=api",
    "tgreport": "allure generate allure-results --clean -o allure-report && java -DconfigFile=notifications/config.json -jar notifications/allure-notifications-4.8.0.jar",
    "tgreport:api": "allure generate allure-results --clean -o allure-report && java -DconfigFile=notifications/config.api.json -jar notifications/allure-notifications-4.8.0.jar"
},
